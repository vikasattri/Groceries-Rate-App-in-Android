<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".shopdetails">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Details"
        android:textSize="30dp"
        android:gravity="center"
        android:background="#44AB14"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:textStyle="italic"
        android:fontFamily="monospace"
        android:textColor="#000"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginTop="40dp"
                    android:text="Shop Name:"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textColor="#000"
                    android:id="@+id/id1"
                    android:hint="Enter name of shop"
                    android:textSize="20dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"

                    android:textColor="#000"
                    android:layout_marginTop="0dp"
                    android:text="Location:     "/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000"
                    android:id="@+id/id2"
                    android:hint="Enter location of shop"
                    android:textSize="20dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginTop="0dp"
                    android:text="Description: "/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000"
                    android:id="@+id/id3"
                    android:hint="Enter description"
                    android:textSize="20dp" />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="#A61EAB"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="monospace"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:text="Vegetables Rate"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold|italic"
                    android:layout_marginTop="0dp"
                    android:text="Vegetables  "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"
                    android:layout_marginLeft="40dp"
                    android:textColor="#000"
                    android:layout_marginTop="0dp"
                    android:text="Price per kg "/>


            </LinearLayout>






            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000"
                    android:hint="name"
                    android:id="@+id/id4"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000"
                    android:id="@+id/id5"
                    android:layout_marginLeft="100dp"
                    android:hint="price"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000"
                    android:id="@+id/id6"
                    android:hint="name"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000"
                    android:layout_marginLeft="100dp"
                    android:hint="price"
                    android:id="@+id/id7"
                    android:textSize="20dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000"
                    android:id="@+id/id8"

                    android:hint="name"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000"
                    android:id="@+id/id9"
                    android:layout_marginLeft="100dp"
                    android:hint="price"
                    android:textSize="20dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000"
                    android:id="@+id/id10"
                    android:hint="name"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000"
                    android:layout_marginLeft="100dp"
                    android:hint="price"
                    android:id="@+id/id11"
                    android:textSize="20dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000"
                    android:id="@+id/id12"
                    android:hint="name"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#000"
                    android:id="@+id/id13"
                    android:layout_marginLeft="100dp"
                    android:hint="price"
                    android:textSize="20dp" />


            </LinearLayout>






            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"

                android:layout_marginTop="20dp"
                android:text="Submit"
                android:onClick="submit"
                android:id="@+id/submit"
                android:background="#6AAB19"/>



        </LinearLayout>


    </ScrollView>

</LinearLayout>